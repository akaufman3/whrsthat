<div class="layout-transparent mdl-layout mdl-js-layout">
  <header class="mdl-layout__header mdl-layout__header--transparent">
    <!-- js menu // material.min.js -->
    <div class="mdl-layout__header-row">
      <span class="mdl-layout-title"><img src="/whrsthat.png"></span>
      <div class="mdl-layout-spacer"></div>
      <nav class="mdl-navigation">
        <a class="mdl-navigation__link" href="/">Home</a>
      	<a class="mdl-navigation__link" href="/about">About</a>
      	<a class="mdl-navigation__link" href="/contact">Contact</a>
      	<a class="mdl-navigation__link" href="/login">Login</a>
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">Title</span>
    <nav class="mdl-navigation">
		<a class="mdl-navigation__link" href="/">Home</a>
		<a class="mdl-navigation__link" href="/about">About</a>
		<a class="mdl-navigation__link" href="/contact">Contact</a>
		<a class="mdl-navigation__link" href="/login">Login</a>
    </nav>
  </div>

</div>

<div id="fullpage">
	<div class="section" id="section0">
		<div class="content">

		<h1 class="land-head">Sharing Events Made Easy!</h1>
		<h2>Ready To Share An Event? Log In!</h2>
		<% if @error %>
			<h4 style="color:red;">Sorry, that username / password combination did not work. Please try again.</h4>
		<% end %>
		<div class="mdl-textfield mdl-js-textfield" id='loginform'>
			<form method='POST' action='/login'>
			<!-- <label class="mdl-textfield__label" for="email">Email:</label> -->
			<input class="mdl-textfield__input" type='text' name='email' placeholder="Enter Email"><br />
			<!-- <label class="mdl-textfield__label" for="password">Password:</label> -->
			<input class="mdl-textfield__input" type='password' name='password' placeholder="Enter Password"><br /><br /><br />
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token() %>' size='65'>
			<button style="margin-left: -35px;" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type='submit'>Log In</button>
		</form>
		</div>
		
		</div>
	</div>
	<div class="section" id="section1">
		<div class="slide" id="slide1">
			<div class="content">

			<h2>New To WhrsThat?</h2>

			<div style="margin: 0 auto;" class="card-wide mdl-card mdl-shadow--2dp">
				<div class="mdl-card__title">
					<h2 class="mdl-card__title-text"></h2>
				</div>
				<div class="mdl-card__supporting-text">
					WhrsThat? shares the location and the story of anything and everything that's happening around you.
				</div>
				<div class="mdl-card__actions mdl-card--border">
					<a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="/users/new">Get Started</a>
				</div>
			</div>

			</div>
		</div>
		<div class="slide" id="slide2">
			<div class="content">			
			
				<h1>More Stuff About WhrsThat...</h1>
			
			</div>
		</div>
		<div class="slide" id="slide2">
			<div class="content">			

				<h1>Oh Yeah... There's More.</h1>
			
			</div>
		</div>
	</div>
</div>