<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<p id="notice"><%= notice %></p>

<img src="/photos/<%= @event.id %>.jpeg">

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Caption:</strong>
  <%= @event.caption %>
</p>

<p>
  <strong>Time at:</strong>
  <span><%= @event.date.strftime('%A %d, %Y') %> <%= @event.date.strftime('%-I%p').downcase %></span>
</p>

<p><%= @event.event_address %></p>

<div style='' class="map-container">
  <div id="map" style='display: inline-block; width: 800px; height: 400px;'></div>
</div>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>

<script type="text/javascript">
  var mapStyle = [
    {
        "stylers": [
            {
                "hue": "#dd0d0d"
            }
        ]
    },
    {
        "featureType": "road",
        "elementType": "labels",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "road",
        "elementType": "geometry",
        "stylers": [
            {
                "lightness": 100
            },
            {
                "visibility": "simplified"
            }
        ]
    }
  ];
  handler = Gmaps.build('Google');
  handler.buildMap({ 
    provider: {  
      zoom:      15,
      styles:    mapStyle
    }, 
    internal: {id: 'map'}
  }, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>