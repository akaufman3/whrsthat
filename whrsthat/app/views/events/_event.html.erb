
<div class="demo-card-event mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand" style="background: linear-gradient(rgba(110, 99, 103, 0.45), rgba(255, 0, 0, 0.45)), url('<%= event.image_url %>');">
    <h4>
      Featured event:<br/>
      <span><%= event.date.strftime('%A %d, %Y') %></span><br/>
      <span><%= event.date.strftime('%-I%p').downcase %></span>
    </h4>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      View
    </a>
    <div class="mdl-layout-spacer"></div>
    <i class="material-icons">event</i>
  </div>
</div>