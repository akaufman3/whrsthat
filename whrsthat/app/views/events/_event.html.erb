<div style="margin: 0 auto;" class="mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title" style="background: url('<%= event.image_url %>')">
    <h2 class="mdl-card__title-text"><%= event.title %></h2>
  </div>
  <div class="mdl-card__supporting-text"><%= event.caption %></div>
  <div class="mdl-card__actions mdl-card--border">
    <a href="/events/<%= event.id %>" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
      
    </a>
  </div>
</div>