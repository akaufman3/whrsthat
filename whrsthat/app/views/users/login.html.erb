<div id='loginform'>
	<form method='POST' action='/login'>
	<input type='text' name='name'><br />
	<input type='password' name='password'><br />
	<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token() %>' size='65'>
	<button type='submit'>Log In</button>
	</form>

	<% if @error %>
	<h3>Sorry, that username / password combination did not work. Please try again.</h3>
	<% end %>
</div>